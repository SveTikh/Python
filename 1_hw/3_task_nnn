n = int(input('Введите число n  '))

nn = int(f"{n}{n}")
nnn = int(f"{n}{n}{n}")

sum = n + nn + nnn
print("Сумма чисел n + nn + nnn = %d" % sum)

# второй способ
n = int(input("Введите число n  "))

total = (n + int(str(n) + str(n)) + int(str(n) + str(n)+ str(n)))

